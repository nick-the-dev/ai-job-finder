{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "reporters": ["html", "clear-text", "progress"],
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ],
  "vitest": {
    "configFile": "vitest.config.ts",
    "related": false
  },
  "timeoutMS": 60000,
  "concurrency": 4,
  "coverageAnalysis": "perTest",
  "ignoreStatic": true,
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": null
  }
}
